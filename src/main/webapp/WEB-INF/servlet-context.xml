<?xml version="1.0" encoding="UTF-8" ?>
<mvc:resources xmlns="http://www.springframework.org/schema/beans" xmlns:mvc="http://www.springframework.org/schema/tool"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/tool http://www.springframework.org/schema/tool/spring-tool.xsd">

    <mvc:annotation-driven></mvc:annotation-driven>
    <mvc:resources mapping="/resources/** location="/resources/"></mvc:resources>
    <bean class="org.springframework.web.servlet.view">

        <property name="prefix" value="/WEB-INF/views/"></property>
        <property name="suffix" value=".jsp:></property>
    </bean>
</beans>